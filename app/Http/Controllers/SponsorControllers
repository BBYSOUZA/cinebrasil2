<?php

namespace App\Http\Controllers;

use Illuminate\Http\Request;
use Illuminate\Support\Facades\Mail;

class SponsorController extends Controller
{
    public function sendEmail(Request $request)
    {
        // Validate input
        $data = $request->validate([
            'message' => 'required|string|max:5000',
        ]);

        // Option A: Use a Mailable class
        Mail::to('lais@cinemanegro.info')->send(new \App\Mail\SponsorRequestMail($data['message']));

        // Option B: Use a quick closure-based mail
        // Mail::raw($data['message'], function ($message) {
        //     $message->to('yourbusiness@domain.com')
        //             ->subject('Sponsor Request');
        // });

        return redirect()->back()->with('success', 'Ihre Nachricht wurde gesendet! Wir melden uns bald.');
    }
}